@model List<ComArticles.ViewModels.ArticleViewModel>
<div class="row">
    <div class="col-md-12">
        <h2>ARTICLES</h2>
    </div>
</div>
<hr />
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Published</th>
                <th>Create time</th>
                <th>Modify time</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.ActionLink(Model[i].Title, "ComponentView", "Home", new { targetController = "AdminArticles",
                                                                                        targetAction = "ArticleEdit",
                                                                                        optionalData = Model[i].Alias,
                                                                                        area = "Administrator"
                        }, null)
                    </td>
                    <td>
                        @if(Model[i].Published)
                        {
                            <img src="~/Components/ComArticles/Content/published-true.png" />
                        }
                        else
                        {
                            <img src="~/Components/ComArticles/Content/published-false.png" />
                        }
                    </td>
                    <td>@Model[i].CreateTime</td>
                    <td>@Model[i].ModifyTime</td> 
                </tr>
            }
        </tbody>
    </table>
</div>